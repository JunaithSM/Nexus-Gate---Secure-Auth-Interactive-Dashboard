# ================================
# Backend Environment Configuration
# ================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
# Must be exact URL without trailing slash
FRONTEND_URL=https://your-app.vercel.app

# PostgreSQL Database (Render provides these)
DB_HOST=your-postgres-host.render.com
DB_PORT=5432
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_SSL=true

# JWT Secrets (use strong random strings, min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-access-token-key-min-32-chars
REFRESH_TOKEN_SECRET=your-different-refresh-token-secret-min-32-chars

# Redis Configuration (Render Redis or external provider)
REDIS_URL=redis://default:password@your-redis-host.render.com:6379
